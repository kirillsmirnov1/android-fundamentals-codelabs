<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageButton
            android:id="@+id/maskot"
            android:src="@drawable/ic_android_green"
            android:contentDescription="@string/android_icon"
            style="@style/icon_size"
            app:layout_constraintEnd_toStartOf="@+id/view"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            />

    <ImageButton
            android:id="@+id/rectangle"
            android:contentDescription="@string/rectangle_shape"
            style="@style/icon_size"
            android:src="@drawable/rectangle"
            app:layout_constraintStart_toEndOf="@+id/view"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            />

    <ImageButton
            android:id="@+id/circle"
            android:src="@drawable/circle"
            android:contentDescription="@string/circle_shape"
            style="@style/icon_size"
            app:layout_constraintEnd_toStartOf="@+id/view"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            android:onClick="explode"
            />

    <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/view"
            />

    <ImageButton
            android:id="@+id/square"
            android:contentDescription="@string/square_shape"
            android:src="@drawable/square"
            style="@style/icon_size"
            app:layout_constraintStart_toEndOf="@+id/view"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
